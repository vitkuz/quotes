extends layout
block navigation
    div
        a(href='/users/login') Login
        a(href='/users/register') Register
        a(href='/users/password') Remember password
        a(href='/users/logout') Logout
block content
    .container
        .row
            .col-md-6
                h4 Some title
                p Some text
            .col-md-6
                h4 Login to your account
                form(action='/users/login' method='post')
                    .form-group
                        label(for='email') Email
                        input.form-control(type='email' name='email' placeholder='Your Email')
                    .form-group
                        label(for='password') Password
                        input.form-control(type='password' name='password' placeholder='Your Password')
                    .form-group
                        button.btn(type='Login') Login
                        a.btn.btn-default(href='/users/register') Register
                        a.btn.btn-default(href='/users/password') Remember